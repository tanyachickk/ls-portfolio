.slider-tags {
  display: flex;
  align-items: center;
  &__item {
    padding: 0 25px;
    margin-right: 15px;
    background-color: rgba(122, 160, 197, 0.1);
    color: rgba(40, 51, 64, 0.7);
    font-size: 15px;
    font-weight: 600;
    line-height: 48px;
    border-radius: 24px;
    @include phones {
      padding: 0 18px;
      font-size: 13px;
      line-height: 40px;
      border-radius: 20px;
    }
  }
}
